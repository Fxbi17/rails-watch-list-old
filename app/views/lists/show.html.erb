<h1 class= "m-5"><%= @list.name %></h1>

<div>
  <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-primary m-5" %>
</div>

<div class= "m-5">
  <h2>Bookmarks</h2>
  <ul class="list-group">
    <% @list.bookmarks.each do |bookmark| %>
      <li>
        <p><%= bookmark.movie.title %></p>
        <p><%= bookmark.movie.overview%></p>
        <p><%= bookmark.comment%></p>
        <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </li>
    <% end %>
  </ul>
</div>
